<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:htext="http://schemas.android.com/apk/res-auto"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/ll_parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">
            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_miles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:hintEnabled="true"
                android:textColorHint="@color/colorSecondaryText"
                app:errorTextAppearance="@style/errorAppearance"
                >
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/et_miles"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom|start"
                    android:hint="请输入公里数"
                    android:inputType="numberDecimal"
                    android:maxLength="8"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="16dp"
                    android:textSize="20sp"
                    />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintEnabled="true"
                android:textColorHint="@color/colorSecondaryText"
                app:errorTextAppearance="@style/errorAppearance"
                >
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/et_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom|start"
                    android:hint="请输入行程时间"
                    android:inputType="numberDecimal"
                    android:maxLength="8"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="16dp"
                    android:textSize="20sp"
                    />
            </android.support.design.widget.TextInputLayout>
            <Button
                android:id="@+id/btn_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textColor="@color/colorPrimaryText"
                android:drawableRight="@drawable/ic_menu_slideshow"
                android:drawablePadding="@dimen/fab_margin"
                android:background="@drawable/btn_bg_round"
                android:padding="5dp"
                android:layout_marginTop="16dp"

                android:layout_marginBottom="16dp"
                android:text="选择城市"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" />
            <LinearLayout
                android:id="@+id/ll_dd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical"
                android:background="@drawable/line_bg_selector"
                android:foreground="?android:attr/selectableItemBackground"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:clickable="true"
                >

                <TextView
                    android:id="@+id/tv_dd"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="18sp"
                    android:text="滴滴打车"
                    />
                <com.hanks.htextview.HTextView
                    android:id="@+id/htv_dd"
                    android:layout_width="230dp"
                    android:layout_height="30dp"

                    android:gravity="center"
                    android:textColor="#333"
                    android:textSize="18sp"
                    htext:animateType="anvil"
                    />
                <ImageView
                    android:id="@+id/tip_down_dd"
                    android:layout_gravity="center_vertical"
                    android:foregroundGravity="right"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:rotation="90"
                    android:background="@drawable/tip_down"/>

            </LinearLayout>
            <include layout="@layout/detail_dd"></include>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ll_texi"
            android:gravity="start|center_vertical"
            android:background="@drawable/line_bg_selector"
            android:foreground="?android:attr/selectableItemBackground"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:orientation="horizontal">

            <Spinner
                android:layout_width="75dp"
                android:layout_height="30dp"
                android:id="@+id/spinner_texi"
                android:dropDownHorizontalOffset="20dp"
                android:dropDownVerticalOffset="30dp"
                android:spinnerMode="dropdown"
                android:foreground="?android:selectableItemBackground"
                android:background="@drawable/bg_drop_down_normal"
                />
            <com.hanks.htextview.HTextView
                android:id="@+id/htv_texi"
                android:layout_width="230dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:textColor="#333"
                android:textSize="18sp"
                htext:animateType="anvil"
                />
            <ImageView
                android:id="@+id/tip_down_texi"
                android:layout_gravity="center_vertical"
                android:foregroundGravity="right"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:rotation="90"
                android:background="@drawable/tip_down"/>

        </LinearLayout>
            <include layout="@layout/detail_texi"></include>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ll_warmcar"
                android:gravity="start|center_vertical"
                android:background="@drawable/line_bg_selector"
                android:foreground="?android:attr/selectableItemBackground"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_warmcar"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="16sp"
                    android:text="WarmCar"
                    />
                <com.hanks.htextview.HTextView
                    android:id="@+id/htv_warmcar"
                    android:layout_width="230dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:textColor="#333"
                    android:textSize="18sp"
                    htext:animateType="anvil"
                    />
                <ImageView
                    android:id="@+id/tip_down_warmcar"
                    android:layout_gravity="center_vertical"
                    android:foregroundGravity="right"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:rotation="90"
                    android:visibility="invisible"
                    android:background="@drawable/tip_down"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ll_leo"
                android:gravity="start|center_vertical"
                android:background="@drawable/line_bg_selector"
                android:foreground="?android:attr/selectableItemBackground"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_leo"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="18sp"
                    android:text="利澳出行"
                    />
                <com.hanks.htextview.HTextView
                    android:id="@+id/htv_leo"
                    android:layout_width="230dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:textColor="#333"
                    android:textSize="18sp"
                    htext:animateType="anvil"
                    />
                <ImageView
                    android:id="@+id/tipdown_leo"
                    android:layout_gravity="center_vertical"
                    android:foregroundGravity="right"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:rotation="90"
                    android:visibility="invisible"
                    android:background="@drawable/tip_down"/>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</android.support.constraint.ConstraintLayout>